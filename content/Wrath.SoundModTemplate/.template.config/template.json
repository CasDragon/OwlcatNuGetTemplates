{
	"$schema": "http://json.schemastore.org/template",
	"author": "Microsoftenator",
	"classifications": [
		"UnityModManager",
		"UMM",
		"Mod",
		"Wrath Sound Mod"
	],
	"identity": "WrathSoundMod",
	"name": "Wwise + UnityModManager Pathfinder: Wrath of the Righteous Mod",
	"shortName": "wrathsoundmod",
	"tags": {
		"language": "C#",
		"type": "project"
	},
	"preferNameDirectory": true,
	"sourceName": "Wrath.SoundModTemplate",
	"symbols": {
		"TargetFramework": {
			"type": "parameter",
			"description": "The target framework for the project",
			"datatype": "text",
			"defaultValue": "net472",
			"replaces": "net472"
		},
		"Description": {
			"type": "parameter",
			"description": "Mod display name",
			"datatype": "text",
			"replaces": "Template Sound Mod",
			"defaultValue": "Template Sound Mod"
		},
		"UnityVersion": {
			"type": "parameter",
			"description": "Unity version to use when developing the mod",
			"datatype": "text",
			"replaces": "2020.3.48",
			"defaultValue": "2020.3.48"
		},
		"Version": {
			"type": "parameter",
			"description": "Mod version",
			"datatype": "text",
			"replaces": "{version}",
			"defaultValue": "1.0.0"
		}
	},
	"postActions": [
		{
			"actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
			"args": {
				"executable": "dotnet",
				"args": "msbuild -t:GenerateCustomPropsFile",
				"redirectStandardOutput": false,
				"redirectStandardError": false
			},
			"manualInstructions": [
				{
					"text": "Run 'GenerateCustomPropsFile' target"
				}
			],
			"continueOnError": false,
			"description ": "Sets up reference paths by executing the GenerateCustomPropsFile MSBuild target"
		}
	]
}